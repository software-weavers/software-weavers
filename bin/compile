#!/usr/bin/env php
<?php

if (!isset($argv[1])) {
    die("Usage: ./bin/compile <page>\n");
}

require_once __DIR__.'/../config.php';

$page = $argv[1];
$template = 'default.phtml';

[
    'dirname' => $dirname,
    'filename' => $filename,
] = pathinfo($page);

/**
 * This allows translating "about" to "a-propos"
 */
$filename = i18n($filename);

$pagePath = "pages/{$page}";

ob_start();
include $pagePath;
$content = ob_get_clean();

/**
 * $filename and $template can be overriden during `include $pagePath`
 */
$dirPath = "site/$dirname/$filename";

if (!is_dir($dirPath) && !mkdir($dirPath, 0777, true)) {
    die("Failed to create directory $dirPath\n");
}

$templatePath = "templates/{$template}";

ob_start();
include $templatePath;
$fullPage = ob_get_clean();

file_put_contents("$dirPath/index.html", $fullPage);